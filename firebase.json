{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/sendWhatsAppNotification",
        "function": {
          "functionId": "sendWhatsAppNotification",
          "region": "europe-west1"
        }
      },
      {
        "source": "/api/sendAdminNotification",
        "function": {
          "functionId": "sendAdminNotification",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  }
}
